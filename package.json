{
  "watch": {
    "build": {
      "patterns": [
        "./src"
      ],
      "extensions": "ts,html,css",
      "verbose": true
    }
  },
  "scripts": {
    "build": "npm run compile && npm run copy-assets",
    "compile": "tsc",
    "copy-assets": "copyfiles --all --up 1 --exclude \"./**/*.{ts,tsx}\" \"./src/**/*\" ./dist",
    "watch": "npx live-server --open=./dist && npm-watch"
  },
  "dependencies": {
    "copyfiles": "^2.4.1",
    "live-server": "^1.2.2",
    "npm-watch": "^0.11.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  }
}
